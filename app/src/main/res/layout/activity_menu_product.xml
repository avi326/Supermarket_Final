<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meravdor.supermarket.MenuProductActivity">

    <LinearLayout
    android:layout_width="450dp"
    android:layout_height="350dp"
    android:layout_marginTop="8dp"
    android:background="@color/startblue"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonList"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
            android:fontFamily="casual"
            android:text="List Of Products"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/common_google_signin_btn_text_light_disabled"
            android:fontFamily="casual"
            android:text="Add Product"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="416dp" />


        <Button
            android:id="@+id/buttonSales"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/common_google_signin_btn_text_light_disabled"
            android:fontFamily="casual"
            android:text="Sales"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/buttonAddSales"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/common_google_signin_btn_text_light_disabled"
            android:fontFamily="casual"
            android:text="Add Sale"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="416dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
